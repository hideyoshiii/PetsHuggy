<%= render 'partial/navbar' %>

<section id="portfolio" class="bg-light-gray row-space-top-4 row-space-4">
    <div class="container">
      <div class="row row-space-2">
        <div class="col-lg-12 text-center">
          <h3 class="section-heading">チケット一覧</h3>
          <h4 class="section-subheading"></h4>
        </div>
      </div>

      <div class="row">
        <% @listings.each do |listing| %>   
            <%= link_to listing do %>
	            <div class="col-md-4 col-sm-6 portfolio-item row-space-2">
	              <%= link_to(listing) do %>
	              <%= image_tag listing.photos[0].image.url(:medium)  if listing.photos.length > 0 %>
	              <% end %>
	              <div class="panel-body">
	                <div class="col-md-8 col-xs-8">
                                    <%= listing.listing_title %>
                                </div>
                                <div class="col-md-2 col-xs-2">
                                    <%= listing.price_pernight %> 円     
                            </div>
                                <div class="col-md-2 col-xs-2">
                                    <%= image_tag listing.user.image,class:"img-circle profile-1" %>
                                </div>    
	              </div>
	            </div>
	        <% end %>  
        <% end %>
      </div>
    </div>
</section>


