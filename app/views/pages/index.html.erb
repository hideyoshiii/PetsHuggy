<script type="text/javascript">
  $(function(){
    $(".navbar").removeClass("navbar-devise");
    $(".navbar").addClass("navbar-default");
  });
</script>

<div class="jumbotron">
  <%= render 'partial/navbar' %>

  <div class="container">
   <div class="row">
     <div class="col-md-6 col-md-offset-3 text-center">
       <h1 class="display-3">RaVoice</h1>
     </div>
   </div> 
  </div>

<!-- Search Form -->
  <div class="top-search-field">
    <%= form_tag search_path, method: :get do %>
      
          

          
          
          <div class="col-md-12 col-xs-12" style="text-align:center;">
            <%= submit_tag "チケットを見る", class: "btn btn-danger" %>
          </div>
        
    <% end %>
  </div>
</div>

<div class="container">  
  <!-- ご利用の流れ -->
  <section id="services">
    <div class="container">
      <div class="row row-space-4">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading">ご利用の流れ</h2>
          <h3 class="section-subheading">RaVoiceは旅人の知識、経験を購入できるサービスです</h3>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-md-4">
          <%= image_tag 'search'%>
          <h4 class="service-heading">探す</h4>
          <p class="text-muted hidden-xs">旅人の提案を探しましょう。</p>
        </div>
        <div class="col-md-4">
          <%= image_tag 'maney'%>
          <h4 class="service-heading">購入する</h4>
          <p class="text-muted hidden-xs">いいなと思う旅人がいたら、提案を購入しましょう。</p>
        </div>
        <div class="col-md-4">
          <%= image_tag 'message'%>
          <h4 class="service-heading">メッセージする</h4>
          <p class="text-muted hidden-xs">メッセージを送って、連絡を取りましょう。</p>
        </div>
      </div>
    </div>
  </section> 

  <!--　おすすめのシッター -->
  <section id="portfolio" class="bg-light-gray row-space-top-4 row-space-4">
    <div class="container">
      <div class="row row-space-2">
        <div class="col-lg-12 text-center">
          <h3 class="section-heading">チケット一覧</h3>
          <h4 class="section-subheading"></h4>
        </div>
      </div>

      <div class="row">
        <% @listings.each do |listing| %>   
            <%= link_to listing do %>
              <div class="col-md-4 col-sm-6 portfolio-item row-space-2">
                <%= link_to(listing) do %>
                <%= image_tag listing.photos[0].image.url(:medium)  if listing.photos.length > 0 %>
                <% end %>
                <div class="panel-body">
                  <div class="col-md-8 col-xs-8">
                                    <%= listing.listing_title %>
                                </div>
                                <div class="col-md-2 col-xs-2">
                                    <%= listing.price_pernight %> 円     
                            </div>
                                <div class="col-md-2 col-xs-2">
                                    <%= image_tag listing.user.image,class:"img-circle profile-1" %>
                                </div>    
                </div>
              </div>
          <% end %>  
        <% end %>
      </div>
    </div>
</section>
</div>

<%= render 'pages/footer' %>

