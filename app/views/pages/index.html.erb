<script type="text/javascript">
  $(function(){
    $(".navbar").removeClass("navbar-devise");
    $(".navbar").addClass("navbar-default");
  });
</script>

<div class="jumbotron">
  <%= render 'partial/navbar' %>

  <div class="container">
   <div class="row">
     <div class="col-md-6 col-md-offset-3 text-center">
       <h1 class="display-3">RaVoice</h1>
     </div>
   </div> 
  </div>

<!-- Search Form -->
  <div class="top-search-field">
    <%= form_tag search_path, method: :get do %>
      
          

          
          
          <div class="col-md-12 col-xs-12" style="text-align:center;">
            <%= submit_tag "チケットを見る", class: "btn btn-danger" %>
          </div>
        
    <% end %>
  </div>
</div>

<div class="container">  
  <!-- ご利用の流れ -->
  <section id="services">
    <div class="container">
      <div class="row row-space-4">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading">ご利用の流れ</h2>
          <h3 class="section-subheading">RaVoiceは旅人の知識、経験を購入できるサービスです</h3>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-md-4">
          <%= image_tag 'search'%>
          <h4 class="service-heading">探す</h4>
          <p class="text-muted hidden-xs">旅人の提案を探しましょう。</p>
        </div>
        <div class="col-md-4">
          <%= image_tag 'maney'%>
          <h4 class="service-heading">購入する</h4>
          <p class="text-muted hidden-xs">いいなと思う旅人がいたら、提案を購入しましょう。</p>
        </div>
        <div class="col-md-4">
          <%= image_tag 'message'%>
          <h4 class="service-heading">メッセージする</h4>
          <p class="text-muted hidden-xs">メッセージを送って、連絡を取りましょう。</p>
        </div>
      </div>
    </div>
  </section> 

  <!--　おすすめのシッター -->
  <section id="portfolio" class="bg-light-gray row-space-top-4 row-space-4">
    <div class="container">
      <div class="row row-space-2">
        <div class="col-lg-12 text-center">
          <h3 class="section-heading">おすすめの旅人</h3>
          <h4 class="section-subheading"></h4>
        </div>
      </div>

      <div class="row">
        <% @users.each do |user|%>
          <% if !user.listings.blank?%>
            <div class="col-md-4 col-sm-6 portfolio-item row-space-2">
              <%= link_to listing_path(user.listings[0]) do %>
                <%= image_tag user.listings[0].photos[0].image.url(:medium) %>
              <% end %>
              <div class="portfolio-caption">
                <%= image_tag user.image,class:"img-circle profile-1"%>
                <span style="font-weight: bold;"><%= user.name %>さん</span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
</div>

<%= render 'pages/footer' %>

